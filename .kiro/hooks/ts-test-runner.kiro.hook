{
  "enabled": true,
  "name": "TypeScript Test Runner",
  "description": "Automatically runs unit tests and integration tests whenever TypeScript files are modified",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.ts"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A TypeScript file has been modified. Please run both unit tests and integration tests to ensure the changes don't break existing functionality. Execute the test suite and report any failures or issues found."
  }
}